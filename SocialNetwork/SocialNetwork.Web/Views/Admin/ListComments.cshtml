@model IEnumerable<SocialNetwork.Web.Models.CommentViewModel>

@{
    ViewData["Title"] = "ListComments";
}

<br />
<br />
<br />
<br />
<br />
<div class="container">

    <ul class="nav nav-pills flex-column">
        <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="ListUsers">Users</a></li>
        <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="ListPosts">Posts</a></li>
        <li class="nav-item"><a class="nav-link" asp-controller="Admin" asp-action="ListComments">Comments</a></li>
    </ul>

    <h1>ListComments</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    User
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Content)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PostId)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.UserId)
                    </th>*@
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserDisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PostId)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.UserId)
                        </td>*@
                    <td>
                        @*@Html.ActionLink("Edit", "EditComment", new { id = item.Id })*@
                        <a asp-controller="Admin" asp-action="DeleteComment" asp-route-id="@item.Id">Delete</a>
                        <a asp-controller="Admin" asp-action="EditComment" asp-route-id="@item.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>