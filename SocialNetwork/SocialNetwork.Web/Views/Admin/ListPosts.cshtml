@model IEnumerable<SocialNetwork.Web.Models.PostViewModel>
@using SocialNetwork.Models.Common.Enums
@{
    ViewData["Title"] = "ListPosts";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="container">
    <h1>ListPosts</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Id)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.UserDisplayName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Content)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Visibility)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CreatedOn)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhotoUrl)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.UserDisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Content)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Visibility)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedOn)
                    </td>
                    @if (!string.IsNullOrWhiteSpace(item.PhotoUrl))
                    {
                        <td>
                            <img src="@item.PhotoUrl" width="50px" height="50px" />
                        </td>
                    }
                    else
                    {
                        <td>
                            none
                        </td>
                    }
                    <td>
                        <a asp-controller="Admin" asp-action="DeletePost" asp-route-id="@item.Id">Delete</a>
                        <a asp-controller="Admin" asp-action="EditPost" asp-route-id="@item.Id">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>